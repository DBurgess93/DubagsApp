<div class="row">
  <%= form_with url: openai_path, method: :get do |form| %>
    <div class="form-group">
      <%= form.label :query %> <%= form.text_area :query %> <%= form.submit 'get
    content' %>
    </div>
  <% end %>
</div>
<div class="row">
  <% if @response %>
    <h2>Response:</h2>
    <p><%= @response %></p>
  <% elsif @error %>
    <h2>Error:</h2>
    <p><%= @error %></p>
  <% end %>
</div>
