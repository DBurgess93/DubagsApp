<div class="page-title">
  <h1>Dubags App</h1>
</div>
<div class="prompt-input">
  <%= form_with url: openai_path, method: :get do |form| %>
    <div class="form-group">
      <%= form.label :query, "Choose a genre" %>
      <%= form.select :query, @prompts.map { |p| [p[:title], p[:text]] } %>
      <%= form.submit 'Get content' %>
    </div>
  <% end %>
</div>
<div class="row">
  <% if @response %>
    <h2>Script:</h2>
    <% @response.split("\n").each do |paragraph| %>
      <p><%= paragraph %></p>
    <% end %>
  <% end %>
  <% if @error %>
    <h2>Error:</h2>
    <p><%= @error %></p>
  <% end %>
</div>
